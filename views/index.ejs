<html>
    <head>
        <title>
            <%= name %>
        </title>
        <link rel="stylesheet" href="/css/home.css">
    </head>

    <body>
        <h1>Deadlift Log</h1>

        <div>
            <ul>
                <% for(let i of excercise_list) { %>
                <li class="contact">
                    <div class="details">
                        <p class="para">weight</p>  <p class="para"> <%= i.weight %> </p>
                        <p class="para">reps</p> <p class="para"> <%= i.reps %> </p>
                    </div>
                    <div>
                        <a href="/delete-set/?id=<%= i._id %>">delete Set</a>
                    </div>
                </li>
                <% } %>
            </ul>
        </div>


        <form action="/create-set" method="POST">
            <input type="number" name="weight" placeholder="Enter weight(in KG)">
            <input type="number" name="reps" placeholder="Enter reps">

            <button type="submit">Add Set</button>
        </form>


    </body>

</html>






<form action="/logout?_method=DELETE" method="POST">
    <button type="submit">Log Out</button>
</form>